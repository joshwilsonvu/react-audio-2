{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    "forceConsistentCasingInFileNames": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es2015", "dom", "dom.iterable", "scripthost", "es2017.typedarrays", "esnext.array", "webworker"]
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}