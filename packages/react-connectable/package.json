{
  "name": "react-connectable",
  "version": "1.0.0",
  "description": "A declarative React interface for creating modular routing graphs.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "rm -rf lib; tsc",
    "build:dev": "rm -rf lib; tsc --watch",
    "lint": "eslint --ext ts src"
  },
  "author": "Josh Wilson",
  "license": "ISC",
  "dependencies": {
    "react": "^16.8.0"
  },
  "devDependencies": {
    "@types/react": "^16.8.13",
    "@types/react-dom": "^16.8.0",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "eslint-plugin-compat": "^3.1.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.6.0",
    "mocha": "^6.1.3",
    "react-dom": "^16.8.6",
    "typescript": "^3.4.3"
  },
  "browserslist": [
    "last 1 version",
    "> 2%",
    "not maintained node versions",
    "not IE 11",
    "not IE_Mob 11",
    "not Edge 18",
    "not dead"
  ],
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:compat/recommended",
      "plugin:react/recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "react",
      "react-hooks",
      "@typescript-eslint"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "react/prop-types": [
        0
      ],
      "@typescript-eslint/no-unused-vars": 2
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
}
