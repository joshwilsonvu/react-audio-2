{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es2015",
    "module": "es2015",
    "noImplicitAny": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "lib": ["es2015", "dom", "dom.iterable", "scripthost", "webworker", "es2017.typedarrays"]
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}